<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/card_view_watch_later"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_centerHorizontal="true" android:layout_margin="@dimen/two_dp"
    android:layout_marginBottom="2dp" android:elevation="12dp"
    android:thicknessRatio="1.9" app:cardPreventCornerOverlap="false">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/border_color" android:orientation="horizontal">
        <ImageView android:id="@+id/img_watchlater"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_height"
            android:layout_gravity="top" android:layout_weight="1"
            android:background="@android:color/white"
            android:src="@drawable/logo_splash1"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="@dimen/ten_dp">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/five_dp">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_watchlater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Happy session test"
                        android:textColor="@color/changeTextColor"
                        android:textSize="@dimen/normal_text_size" android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Story of young marathi boy"
                    android:textColor="@color/changeTextColor"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>